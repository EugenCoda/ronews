- function truncate(str, len){
  - if (str.length > len && str.length > 0)
    //- removes all html tags
    - let clean_str = str.replace(/(<([^>]+)>)/ig, "")
    - new_str = clean_str + "";
    - new_str = clean_str.substr(0, len);
    - new_str = clean_str.substr(0, new_str.lastIndexOf(""));
    - new_str = new_str.length > 0 ? new_str : clean_str.substr(0, len);
    - return new_str;
  - return str;
- }


extends layout

block content
  h3=title

  form(method='POST' action='/users/login')
    div.form-group
      label(for='username') User Name:
      input#username.form-control(type='text' name='username' required='true')
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' name='password' required='true')
    
    button.btn.btn-primary(type='submit') Submit
    | 
    a.btn.btn-info(href='password-reset') Forgot password?
    | 
    a#tokenResend.link(href='resend') Click here if you didn't receive a verification token or it expired

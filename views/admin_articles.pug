extends layout

block content
  h3= title

  table.table.table-sm.table-hover
    thead.thead-light
      tr
        th(scope='col' width='250px') Title 
        th(scope='col') Author 
        th(scope='col') isVerified 

    tbody
      - articles.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
      //- Loops through each article from the article list.
      each article in articles

        tr
          td
            a(href=article.url) #{article.title} 
          
          td 
            a(href=article.createdBy.url) #{article.createdBy.name} 
          if article.isVerified
            td Yes
          else
            td 
              form(method='POST' action='')
                div.form-group
                  select#isVerified.form-control(type='select', name='isVerified' value=(undefined===article ? '' : article.isVerified)) 
                    option(value="true" selected=(article.isVerified) ? 'selected' : false) Yes
                    option(value="false" selected=(!article.isVerified) ? 'selected' : false) No
                  label(for='articleId')
                  input#articleId.form-control(type='hidden' name='articleId' required='true' value=article._id)
                button.btn.btn-primary(type='submit') Submit
      else
        tr
          td There are no articles pending approval
          td
          td
    
  a.btn.btn-secondary(href='/dashboard') Go back to Dashboard
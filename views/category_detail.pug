extends layout

block content

  h3 #{category.name}
  
  div(style='margin-left:20px;margin-top:20px')

    table.table.table-sm.table-hover
      thead.thead-light
        tr
          th(scope='col' width='80px') Cover
          th(scope='col' width='500px') Title 
          th(scope='col') Author 
      tbody
        - category_articles.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        - let index = 0
        each articles in category_articles
          - index++
          tr
            td
              a(href=article.url) #{article.title} 
            td 
              a(href='#') #{article.user.name} 
        else
          tr
            th(scope='row') 
            td This category has no articles yet. Add one 
              | 
              a(href='/articles/create') now.
            td
            td
